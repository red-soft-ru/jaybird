<?xml version="1.0"?>
<project name="archive" xmlns:if="ant:if" xmlns:unless="ant:unless">
    <!-- =================================================================== -->
    <!-- Creates the jar archives                                            -->
    <!-- =================================================================== -->
    <target name="jars" depends="jar-j2ee, jar-ra, jar-test, jar-sources, jar-javadoc"/>

    <!-- Not really a jar operation but necessary :) -->
    <target name="jar-j2ee" depends="compile">
        <mkdir dir="${build.lib}"/>
        <copy file="${module.thirdparty}/connector-api-1.5.jar" tofile="${build.lib}/connector-api-1.5.jar"/>
    </target>

    <target name="jar-ra" depends="compile">
        <mkdir dir="${build.lib}"/>
        <jar jarfile="${build.lib}/${archive.name.simple}" manifest="${build.etc}/default.mf">
            <fileset dir="${build.classes}">
                <include name="org/firebirdsql/**"/>
            </fileset>
            <fileset dir="${build.resources}">
                <exclude name="log4j.properties"/>
                <exclude name="META-INF/ra.xml"/>
                <exclude name="org/firebirdsql/gds/ng/tz/firebird_time_zone_mapping.properties" if:set="jdbc.41"/>
                <include name="**/*.properties"/>
                <include name="**/*.xml"/>
            </fileset>
            <zipfileset dir="${build.resources}/META-INF" prefix="META-INF">
                <include name="services/**/*"/>
            </zipfileset>
            <zipfileset dir="${build.etc}/META-INF" prefix="META-INF">
                <include name="maven/**/*"/>
            </zipfileset>
        </jar>

        <jar jarfile="${build.lib}/${archive.name.full}" manifest="${build.etc}/default.mf">
            <fileset dir="${build.classes}">
                <include name="org/firebirdsql/**"/>
            </fileset>
            <fileset dir="${build.resources}">
                <exclude name="log4j.properties"/>
                <exclude name="META-INF/ra.xml"/>
                <exclude name="org/firebirdsql/gds/ng/tz/firebird_time_zone_mapping.properties" if:set="jdbc.41"/>
                <include name="**/*.properties"/>
                <include name="**/*.xml"/>
            </fileset>
            <fileset dir="${build.j2ee}">
                <include name="javax/**"/>
            </fileset>
            <zipfileset dir="${build.resources}/META-INF" prefix="META-INF">
                <include name="services/**/*"/>
            </zipfileset>
        </jar>

        <jar jarfile="${build.lib}/${archive.name.cryptoapi}" manifest="${build.etc}/default.mf">
            <fileset dir="${build.cryptoapi}">
                <include name="**"/>
            </fileset>
        </jar>

        <jar jarfile="${build.lib}/${archive.name.cryptoapi_security}" manifest="${build.etc}/default.mf">
            <fileset dir="${build.cryptoapi_security}">
                <include name="**"/>
            </fileset>
            <fileset dir="${build.cryptoapi}">
                <include name="**"/>
                <exclude name="org/firebirdsql/cryptoapi/windows/advapi/Advapi.class"/>
                <exclude name="org/firebirdsql/cryptoapi/windows/advapi/AdvapiLib.class"/>
            </fileset>
        </jar>
    </target>

    <target name="jar-test" depends="compile">
        <mkdir dir="${build.lib}"/>
        <jar jarfile="${build.lib}/${archive.name.test}" manifest="${build.etc}/default.mf">
            <fileset dir="${build.test}">
                <include name="org/firebirdsql/**"/>
                <include name="**/*.properties"/>
                <include name="**/*.xml"/>
            </fileset>
            <fileset dir="${build.resources}">
                <include name="**/*.properties"/>
            </fileset>
        </jar>
    </target>

    <target name="jar-sources" depends="set-driver-sources">
        <mkdir dir="${build.lib}"/>
        <jar jarfile="${build.lib}/${archive.name.sources}" update="true">
            <fileset dir="${source.java}">
                <include name="**/*.java"/>
            </fileset>
            <fileset dir="${source.extern}">
                <include name="**/*.java"/>
            </fileset>
            <fileset dir="${source.jna-client}">
                <include name="**/*.java"/>
            </fileset>
            <fileset dir="${toString:source.java.openoffice}">
                <include name="**/*.java"/>
            </fileset>
            <fileset dir="${toString:source.java.additional}">
                <include name="**/*.java"/>
            </fileset>
            <fileset dir="${source.resources}">
                <exclude name="log4j.properties"/>
                <exclude name="org/firebirdsql/gds/ng/tz/firebird_time_zone_mapping.properties" if:set="jdbc.41"/>
                <include name="**/*.properties"/>
                <include name="**/*.xml"/>
            </fileset>
            <zipfileset dir="${source.resources}/META-INF" prefix="META-INF">
                <include name="services/**/*"/>
            </zipfileset>
        </jar>
        <jar jarfile="${build.lib}/${archive.name.cryptoapi.sources}" update="true">
            <fileset dir="${source.cryptoapi}">
                <include name="org/firebirdsql/**"/>
            </fileset>
        </jar>
        <jar jarfile="${build.lib}/${archive.name.cryptoapi_security.sources}" update="true">
            <fileset dir="${source.cryptoapi_security}">
                <include name="org/firebirdsql/**"/>
            </fileset>
            <fileset dir="${source.cryptoapi}">
                <include name="org/firebirdsql/**"/>
                <exclude name="org/firebirdsql/cryptoapi/windows/advapi/Advapi.java"/>
                <exclude name="org/firebirdsql/cryptoapi/windows/advapi/AdvapiLib.java"/>
            </fileset>
        </jar>
        <jar jarfile="${build.lib}/${archive.name.full.sources}" update="true">
            <fileset dir="${source.java}">
                <include name="**/*.java"/>
            </fileset>
            <fileset dir="${toString:source.java.openoffice}">
                <include name="**/*.java"/>
            </fileset>
            <fileset dir="${toString:source.java.additional}">
                <include name="**/*.java"/>
            </fileset>
            <fileset dir="${source.resources}">
                <exclude name="log4j.properties"/>
                <include name="**/*.properties"/>
                <include name="**/*.xml"/>
            </fileset>
            <fileset dir="${module.thirdparty}">
                <include name="connector-api-1.5.jar"/>
            </fileset>
        </jar>
    </target>

    <target name="jar-javadoc" depends="javadocs">
        <mkdir dir="${build.lib}"/>
        <jar jarfile="${build.lib}/${archive.name.javadoc}" update="true">
            <fileset dir="${build.docs}">
            </fileset>
        </jar>
    </target>


    <!-- =================================================================== -->
    <!-- Creates the rar archives                                            -->
    <!-- =================================================================== -->
    <target name="rar" depends="jar-ra">
        <jar jarfile="${build.lib}/${archive.name.rar}" manifest="${build.etc}/default.mf">
            <fileset dir="${build.lib}">
                <include name="${archive.name.simple}"/>
            </fileset>
            <fileset dir="${build.resources}">
                <include name="META-INF/ra.xml"/>
            </fileset>
        </jar>
    </target>
</project>
