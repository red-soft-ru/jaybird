<?xml version="1.0"?>
<project name="docs">

    <target name="buildalldocs" depends="buildfaq, buildreleasenotes"/>

    <target name="buildfaq" depends="init">
        <mkdir dir="${build.documentation}"/>
        <exec executable="${pandoc.app}">
            <arg value="-s"/>
            <arg value="-f"/>
            <arg value="markdown"/>
            <arg value="-t"/>
            <arg value="html5"/>
            <arg value="--toc"/>
            <arg value="-N"/>
            <arg value="--section-divs"/>
            <arg value="--email-obfuscation=none"/>
            <arg value="-o"/>
            <arg value="${build.documentation}/faq.html"/>
            <arg value="${source.documentation}/faq.md"/>
        </exec>
    </target>

    <target name="buildreleasenotes" depends="init">
        <mkdir dir="${build.documentation}"/>
        <copy file="${source.documentation}/release_notes.md" tofile="${build.documentation}/release_notes.md" encoding="UTF-8">
            <filterset>
                <filter token="VERSION" value="${version.maven}"/>
            </filterset>
        </copy>
        <exec executable="${pandoc.app}">
            <arg value="-s"/>
            <arg value="-f"/>
            <arg value="markdown"/>
            <arg value="-t"/>
            <arg value="html5"/>
            <arg value="--toc"/>
            <arg value="-N"/>
            <arg value="--section-divs"/>
            <arg value="--email-obfuscation=none"/>
            <arg value="-o"/>
            <arg value="${build.documentation}/release_notes.html"/>
            <arg value="${build.documentation}/release_notes.md"/>
        </exec>
    </target>
</project>